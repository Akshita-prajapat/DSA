class Solution {
  public:
    bool twoSum(vector<int>& arr, int target) {
        int n = arr.size();
        sort(arr.begin() , arr.end());
        int i = 0 , j = n-1;
        while(i < j){
        int sum = arr[i] + arr[j];
        if(sum == target) return true;
        else if(sum > target) j--;
        else if(sum < target) i++;
        }
        return false;
    }
};
