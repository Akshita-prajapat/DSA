class Solution {
public:
    void pushZerosToEnd(vector<int>& arr) {
        int n = arr.size();
        int pos = 0; // yahan next non-zero element jayega
        
        for(int i = 0; i < n; i++) {
            if(arr[i] != 0) {
                swap(arr[i], arr[pos]);
                pos++;
            }
        }
    }
};
