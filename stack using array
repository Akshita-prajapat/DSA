class myStack {
  public:
    int *arr;//dynamic memory
    int top;
    int cap; // max limit btaega

public:
    myStack(int n){
     // Define Data Structures
     
        cap = n; // stack ki limit set kr di
        arr = new int[n]; //required memory le li
        top = -1; // empty stack
    }
   
    bool isEmpty() {
        // check if the stack is empty
        return top == -1;
    }

    bool isFull() {
        // check if the stack is full
        return top ==cap -1;
        
    }

    void push(int x) {
        // inserts x at the top of the stack
        if(top ==cap-1) return;
        arr[++top] = x;
    }

    void pop() {
        // removes an element from the top of the stack
        if(top ==-1) return;
        top--;
    }

    int peek() {
        // Returns the top element of the stack
        if (top == -1) return -1;
        return arr[top];
    }
};
