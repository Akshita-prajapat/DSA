class Solution {
  public:
    int minMen(vector<int>& arr) {
        int n = arr.size();
        vector<pair<int,int>> intervals;

        for(int i = 0; i < n; i++){
            if(arr[i] != -1){
                int L = max(0, i - arr[i]);
                int R = min(n - 1, i + arr[i]);
                intervals.push_back({L, R});
            }
        }

        sort(intervals.begin(), intervals.end());

        int curr = 0;      // next hour jo cover karna hai
        int count = 0;    // kitne log use kiye
        int i = 0;        // interval pointer

        while(curr < n){
            int farthest = -1;

            while(i < intervals.size() && intervals[i].first <= curr){
                farthest = max(farthest, intervals[i].second);
                i++;
            }

            if(farthest < curr) return -1;

            count++;
            curr = farthest + 1;
        }

        return count;
    }
};
